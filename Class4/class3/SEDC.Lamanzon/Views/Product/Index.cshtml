@model List<ProductViewModel>
@*@using SEDC.Lamazon.ViewModels*@
@{
    ViewData["Title"] = "Index";
}

<h2>Menu</h2>
<h4>Products</h4>

<a asp-controller="Product" asp-action="CreateProduct"> Add a new product to the menu </a>
<hr>


@foreach (var product in Model)
{
    <ul style="list-style-type: none;">
        <li>Product Name: @product.Name</li>

        <li><a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">See Details for Product</a></li>
    </ul>

}